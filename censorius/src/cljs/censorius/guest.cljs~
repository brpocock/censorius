          (when (not= :baby (:ticket-type guest))
            [suggest-staff-apply])
          [marital-edit {:guest guest}])

        [:div (case (:ticket-type guest)
                :adult (abbr "ğŸ«" "Adult")
                :child (abbr "ğŸ«ğŸš¸" "Child")
                :baby (abbr "ğŸ«ğŸš¶" "Baby"))

         " "
         (cond
           (staff/lugal+? guest) (abbr "ğ’ˆ—" "Lugal")
           (lugal+-spouse? guest) (abbr (str "ğ’ˆ—" (couple-icon guest)) "Lugal spouse")
           (:staff? guest) (abbr "â›¤" "Staff"))]]
       
       [:td (click-edit% editing :days)
        (if (= :days @editing)
          [:div {:class "pop-out"}
           (if (:staff? guest)
             [:span "Tuesdayâ†’Sunday"
              [:span {:class "hint"} "Staff members are always a full week admission"]]
             [radio/radio-set guest {:label "Days attending"
